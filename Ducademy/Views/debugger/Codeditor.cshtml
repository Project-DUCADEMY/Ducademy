@{
    Layout = "_Layout";
    ViewData["Title"] = "Codeditor";
}
@section Scripts {
    <script src="~/code-editor/js/ace-editor/src-min/ace.js"></script>
    <script src="~/code-editor/js/ace-editor/src-min/mode-javascript.js"></script>
    <script src="~/code-editor/js/ace-editor/src-min/ext-language_tools.js"></script>

    <script src="~/code-editor/js/editor.js"></script>
    <script src="~/code-editor/js/editor-console.js"></script>
}
@section Designs {
    <link rel="stylesheet" href="~/code-editor/css/editor-styles.css">
}

<div class="editor">
    <div class="editor__wrapper">
        <div class="editor__body">
            <div id="editorCode" class="editor__code"></div>
        </div>
        <div class="editor__footer">
            <div class="editor__footer--left">
                <button class="editor__btn editor__run">Run ></button>
                <button class="editor__btn editor__reset">Reset ></button>
            </div>
            <div class="editor__footer--right">
                <div class="editor__console">
                    <ul class="editor__console-logs"></ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Required Ace Libraries -->
